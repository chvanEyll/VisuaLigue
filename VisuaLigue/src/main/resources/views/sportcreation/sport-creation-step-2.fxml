<VBox fx:id="rootNode" spacing="14.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ca.ulaval.glo2004.visualigue.ui.controllers.sportcreation.SportCreationStep2Controller">
    <VBox styleClass="form-section">
        <children>
            <HBox alignment="CENTER_LEFT" styleClass="section-header">
                <children>
                    <Label text="Dimensions réelles du terrain" />
                </children>
            </HBox>
            <FlowPane styleClass="form-group, horizontal">
                <children>
                    <Label prefWidth="70.0" text="Largeur:" />
                    <Spinner fx:id="widthSpinner" editable="true" styleClass="arrows-on-right-horizontal" />
                    <ComboBox fx:id="widthUnitComboBox" prefWidth="150" maxWidth="150" />
                </children>
            </FlowPane>
            <FlowPane styleClass="form-group, horizontal">
                <children>
                    <Label prefWidth="70.0" text="Longeur:" />
                    <Spinner fx:id="lengthSpinner" editable="true" styleClass="arrows-on-right-horizontal" />
                    <ComboBox fx:id="lengthUnitComboBox" prefWidth="150" maxWidth="150" />
                </children>
            </FlowPane>
        </children>
    </VBox>
    <VBox styleClass="form-section">
        <children>
            <HBox alignment="CENTER_LEFT" styleClass="section-header">
                <children>
                    <Label text="Image du terrain" />
                </children>
            </HBox>
            <FlowPane styleClass="form-group, horizontal">
                <children>
                    <Button text="Sélectionner une image..." onAction="#onBrowseImageButtonAction" />
                    <Label fx:id="imagePathLabel" />
                </children>
            </FlowPane>
            <FlowPane styleClass="form-group, vertical">
                <Label fx:id="imageErrorLabel" styleClass="error-label" text="Error label." />
            </FlowPane>
            <ResizableImageView fx:id="imageView" />
        </children>
    </VBox>
    <styleClass>
        <String fx:value="form" />
        <String fx:value="root-node" />
    </styleClass>
</VBox>