<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import ca.ulaval.glo2004.visualigue.ui.customcontrols.SvgImage?>

<HBox fx:id="root-node" alignment="CENTER_LEFT" prefHeight="50.0" styleClass="root-node, toolbar" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Button mnemonicParsing="false">
            <graphic>
                <SvgImage url="/images/save-icon.fxml" />
            </graphic>
            <tooltip>
                <Tooltip text="Sauvegarder" />
            </tooltip>
            <styleClass>
                <String fx:value="borderless" />
                <String fx:value="medium" />
            </styleClass>
        </Button>
        <Button mnemonicParsing="false">
            <graphic>
                <SvgImage url="/images/cross-icon.fxml" />
            </graphic>
            <tooltip>
                <Tooltip text="Fermer" />
            </tooltip>
            <styleClass>
                <String fx:value="borderless" />
                <String fx:value="medium" />
            </styleClass>
        </Button>
        <Button mnemonicParsing="false">
            <graphic>
                <SvgImage url="/images/export-icon.fxml" />
            </graphic>
            <tooltip>
                <Tooltip text="Exporter" />
            </tooltip>
            <styleClass>
                <String fx:value="borderless" />
                <String fx:value="medium" />
            </styleClass>
        </Button>
        <Pane prefWidth="1.0" styleClass="separator">
            <HBox.margin>
                <Insets left="3.0" right="3.0" />
            </HBox.margin>
        </Pane>
        <Button mnemonicParsing="false">
            <graphic>
                <SvgImage url="/images/undo-icon.fxml" />
            </graphic>
            <tooltip>
                <Tooltip text="Annuler" />
            </tooltip>
            <styleClass>
                <String fx:value="borderless" />
                <String fx:value="medium" />
            </styleClass>
        </Button>
        <Button mnemonicParsing="false">
            <graphic>
                <SvgImage url="/images/redo-icon.fxml" />
            </graphic>
            <tooltip>
                <Tooltip text="Rétablir" />
            </tooltip>
            <styleClass>
                <String fx:value="borderless" />
                <String fx:value="medium" />
            </styleClass>
        </Button>
        <Pane prefWidth="1.0" styleClass="separator">
            <HBox.margin>
                <Insets left="3.0" right="3.0" />
            </HBox.margin>
        </Pane>
        <Button mnemonicParsing="false">
            <graphic>
                <SvgImage url="/images/zoom-in-icon.fxml" />
            </graphic>
            <tooltip>
                <Tooltip text="Zoom avant" />
            </tooltip>
            <styleClass>
                <String fx:value="borderless" />
                <String fx:value="medium" />
            </styleClass>
        </Button>
        <TextField prefWidth="85.0" text="100%">
            <styleClass>
                <String fx:value="centered-text" />
                <String fx:value="text-field" />
            </styleClass>
        </TextField>
        <Button mnemonicParsing="false">
            <graphic>
                <SvgImage url="/images/zoom-out-icon.fxml" />
            </graphic>
            <tooltip>
                <Tooltip text="Zoom arrière" />
            </tooltip>
            <styleClass>
                <String fx:value="borderless" />
                <String fx:value="medium" />
            </styleClass>
        </Button>
        <Button mnemonicParsing="false">
            <graphic>
                <SvgImage url="/images/best-fit-icon.fxml" />
            </graphic>
            <tooltip>
                <Tooltip text="Meilleur ajustement" />
            </tooltip>
            <styleClass>
                <String fx:value="borderless" />
                <String fx:value="medium" />
            </styleClass>
        </Button>
        <Pane prefWidth="1.0" styleClass="separator">
            <HBox.margin>
                <Insets left="3.0" right="3.0" />
            </HBox.margin>
        </Pane>
        <Button mnemonicParsing="false">
            <graphic>
                <SvgImage url="/images/3d-icon.fxml" />
            </graphic>
            <tooltip>
                <Tooltip text="Vue 3D" />
            </tooltip>
            <styleClass>
                <String fx:value="borderless" />
                <String fx:value="medium" />
            </styleClass>
        </Button>
        <Button mnemonicParsing="false">
            <graphic>
                <SvgImage url="/images/show-labels-icon.fxml" />
            </graphic>
            <tooltip>
                <Tooltip text="Afficher/masquer les catégories des joueurs" />
            </tooltip>
            <styleClass>
                <String fx:value="borderless" />
                <String fx:value="medium" />
            </styleClass>
        </Button>
        <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
            <children>
                <Label styleClass="coordinate-label" text="(111 m, 300 m)" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets left="5.0" right="10.0" />
    </padding>
</HBox>
