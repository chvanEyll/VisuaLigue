<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import ca.ulaval.glo2004.visualigue.ui.customcontrols.SvgImage?>
<?import ca.ulaval.glo2004.visualigue.ui.customcontrols.ExtendedButton?>
<?import ca.ulaval.glo2004.visualigue.ui.customcontrols.ExtendedTextField?>

<HBox fx:id="root-node" alignment="CENTER_LEFT" prefHeight="50.0" styleClass="root-node, toolbar" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ca.ulaval.glo2004.visualigue.ui.controllers.playeditor.toolbar.ToolbarController">
    <children>
        <Button fx:id="saveButton" mnemonicParsing="false" onAction="#onSaveButtonAction">
            <graphic>
                <SvgImage url="/images/save-icon.fxml" />
            </graphic>
            <tooltip>
                <Tooltip text="Sauvegarder" />
            </tooltip>
            <styleClass>
                <String fx:value="borderless" />
                <String fx:value="medium" />
            </styleClass>
        </Button>
        <Button fx:id="closeButton" mnemonicParsing="false" onAction="#onCloseButtonAction">
            <graphic>
                <SvgImage url="/images/cross-icon.fxml" />
            </graphic>
            <tooltip>
                <Tooltip text="Fermer" />
            </tooltip>
            <styleClass>
                <String fx:value="borderless" />
                <String fx:value="medium" />
            </styleClass>
        </Button>
        <Button fx:id="exportButton" mnemonicParsing="false" onAction="#onExportButtonAction">
            <graphic>
                <SvgImage url="/images/export-icon.fxml" />
            </graphic>
            <tooltip>
                <Tooltip text="Exporter" />
            </tooltip>
            <styleClass>
                <String fx:value="borderless" />
                <String fx:value="medium" />
            </styleClass>
        </Button>
        <Pane prefWidth="1.0" styleClass="separator">
            <HBox.margin>
                <Insets left="3.0" right="3.0" />
            </HBox.margin>
        </Pane>
        <Button fx:id="undoButton" mnemonicParsing="false" onAction="#onUndoButtonAction">
            <graphic>
                <SvgImage url="/images/undo-icon.fxml" />
            </graphic>
            <tooltip>
                <Tooltip text="Annuler" />
            </tooltip>
            <styleClass>
                <String fx:value="borderless" />
                <String fx:value="medium" />
            </styleClass>
        </Button>
        <Button fx:id="redoButton" mnemonicParsing="false" onAction="#onRedoButtonAction">
            <graphic>
                <SvgImage url="/images/redo-icon.fxml" />
            </graphic>
            <tooltip>
                <Tooltip text="Rétablir" />
            </tooltip>
            <styleClass>
                <String fx:value="borderless" />
                <String fx:value="medium" />
            </styleClass>
        </Button>
        <Pane prefWidth="1.0" styleClass="separator">
            <HBox.margin>
                <Insets left="3.0" right="3.0" />
            </HBox.margin>
        </Pane>
        <Button fx:id="zoomInButton" mnemonicParsing="false" onAction="#onZoomInButtonAction">
            <graphic>
                <SvgImage url="/images/zoom-in-icon.fxml" />
            </graphic>
            <tooltip>
                <Tooltip text="Zoom avant" />
            </tooltip>
            <styleClass>
                <String fx:value="borderless" />
                <String fx:value="medium" />
            </styleClass>
        </Button>
        <ExtendedTextField fx:id="zoomTextField" prefWidth="85.0" text="100%"  onAction="#onZoomTextFieldAction" maxLength="4">
            <styleClass>
                <String fx:value="centered-text" />
                <String fx:value="text-field" />
            </styleClass>
        </ExtendedTextField>
        <Button fx:id="zoomOutButton" mnemonicParsing="false" onAction="#onZoomOutButtonAction">
            <graphic>
                <SvgImage url="/images/zoom-out-icon.fxml" />
            </graphic>
            <tooltip>
                <Tooltip text="Zoom arrière" />
            </tooltip>
            <styleClass>
                <String fx:value="borderless" />
                <String fx:value="medium" />
            </styleClass>
        </Button>
        <Button fx:id="bestFitButton" mnemonicParsing="false" onAction="#onBestFitButtonAction">
            <graphic>
                <SvgImage url="/images/best-fit-icon.fxml" />
            </graphic>
            <tooltip>
                <Tooltip text="Meilleur ajustement" />
            </tooltip>
            <styleClass>
                <String fx:value="borderless" />
                <String fx:value="medium" />
            </styleClass>
        </Button>
        <Pane prefWidth="1.0" styleClass="separator">
            <HBox.margin>
                <Insets left="3.0" right="3.0" />
            </HBox.margin>
        </Pane>
        <Button fx:id="switch3DButton" mnemonicParsing="false" onAction="#onSwitch3DButtonAction">
            <graphic>
                <SvgImage url="/images/3d-icon.fxml" />
            </graphic>
            <tooltip>
                <Tooltip text="Vue 3D" />
            </tooltip>
            <styleClass>
                <String fx:value="borderless" />
                <String fx:value="medium" />
            </styleClass>
        </Button>
        <ExtendedButton fx:id="labelDisplayToggleButton" mnemonicParsing="false" onAction="#onLabelDisplayToggleButtonAction">
            <graphic>
                <SvgImage url="/images/show-labels-icon.fxml" />
            </graphic>
            <tooltip>
                <Tooltip text="Afficher/masquer les catégories des joueurs" />
            </tooltip>
            <styleClass>
                <String fx:value="borderless" />
                <String fx:value="medium" />
            </styleClass>
        </ExtendedButton>
        <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
            <children>
                <Label fx:id="coordinateLabel" styleClass="coordinate-label"/>
            </children>
        </HBox>
    </children>
    <padding>
        <Insets left="5.0" right="10.0" />
    </padding>
</HBox>
