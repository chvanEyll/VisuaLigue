<GridPane fx:id="rootNode" style="-fx-padding: 1 0 1 0" onMouseClicked="#onMouseClicked" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ca.ulaval.glo2004.visualigue.ui.controllers.sportcreation.PlayerCategoryListItemController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="41.0" minWidth="41.0" prefWidth="41.0" />
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="41.0" minWidth="41.0" prefWidth="41.0" />
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="7.0" minWidth="7.0" prefWidth="7.0" />
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="41.0" minWidth="41.0" prefWidth="41.0" />
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="41.0" minWidth="41.0" prefWidth="41.0" />
    </columnConstraints>
    <children>
        <Label fx:id="nameLabel" styleClass="item" text="Attaquant" GridPane.columnIndex="0" />
        <Pane fx:id="allyColorPane" styleClass="color-list-item, item" GridPane.columnIndex="1" >
            <GridPane.margin>
                <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
            </GridPane.margin>
        </Pane>
        <Pane fx:id="opponentColorPane" styleClass="color-list-item, item" GridPane.columnIndex="2">
            <GridPane.margin>
                <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
            </GridPane.margin>
        </Pane>
        <Pane fx:id="spacerPane" GridPane.columnIndex="3"/>
        <Button fx:id="editButton" onAction="#onEditButtonAction" alignment="CENTER" GridPane.columnIndex="4">
            <graphic>
                <StackPane stylesheets="@../images/pen-icon.fxml.css">
                    <children>
                        <fx:include source="../images/pen-icon.fxml" />
                    </children>
                </StackPane>
            </graphic>
            <tooltip>
                <Tooltip text="Modifier" />
            </tooltip>
            <styleClass>
                <String fx:value="borderless-button" />
                <String fx:value="standard-size" />
            </styleClass>
        </Button>
        <Button fx:id="deleteButton" onAction="#onDeleteButtonAction" alignment="CENTER" GridPane.columnIndex="5">
            <graphic>
                <StackPane stylesheets="@../images/cross-icon.fxml.css">
                    <children>
                        <fx:include source="../images/cross-icon.fxml" />
                    </children>
                </StackPane>
            </graphic>
            <tooltip>
                <Tooltip text="Supprimer" />
            </tooltip>
            <styleClass>
                <String fx:value="borderless-button" />
                <String fx:value="standard-size" />
            </styleClass>
        </Button>
    </children>
    <stylesheets>
        <URL value="@../css/main.fxml.css" />
    </stylesheets>
    <styleClass>
        <String fx:value="grid-pane" />
        <String fx:value="hoverable" />
        <String fx:value="root-node" />
    </styleClass>
</GridPane>