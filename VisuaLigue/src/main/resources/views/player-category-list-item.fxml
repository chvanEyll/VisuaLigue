<fx:root type="javafx.scene.layout.GridPane" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ca.ulaval.glo2004.visualigue.ui.controllers.sportcreation.PlayerCategoryListItemController">
    <children>
        <Label fx:id="nameLabel" styleClass="item" text="Attaquant" GridPane.columnIndex="0" onMouseEntered="#onMouseEntered" onMouseExited="#onMouseExited" onMouseClicked="#onMouseClicked" />
        <Pane fx:id="allyColorPane" styleClass="color-list-item, item" GridPane.columnIndex="1" onMouseEntered="#onMouseEntered" onMouseExited="#onMouseExited" onMouseClicked="#onMouseClicked">
            <GridPane.margin>
                <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
            </GridPane.margin>
        </Pane>
        <Pane fx:id="opponentColorPane" styleClass="color-list-item, item" GridPane.columnIndex="2" onMouseEntered="#onMouseEntered" onMouseExited="#onMouseExited" onMouseClicked="#onMouseClicked">
            <GridPane.margin>
                <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
            </GridPane.margin>
        </Pane>
        <Pane fx:id="spacerPane" styleClass="item" GridPane.columnIndex="3" onMouseEntered="#onMouseEntered" onMouseExited="#onMouseExited" onMouseClicked="#onMouseClicked"/>
        <Button fx:id="editButton" styleClass="item" onAction="#onEditButtonAction" alignment="CENTER" GridPane.columnIndex="4" onMouseEntered="#onMouseEntered" onMouseExited="#onMouseExited">
            <graphic>
                <StackPane stylesheets="@../images/pen-icon.fxml.css">
                    <children>
                        <fx:include source="../images/pen-icon.fxml" />
                    </children>
                </StackPane>
            </graphic>
            <tooltip>
                <Tooltip text="Modifier" />
            </tooltip>
            <styleClass>
                <String fx:value="borderless-button" />
                <String fx:value="standard-size" />
            </styleClass>
        </Button>
        <Button fx:id="deleteButton" styleClass="item" onAction="#onDeleteButtonAction" alignment="CENTER" GridPane.columnIndex="5"  onMouseEntered="#onMouseEntered" onMouseExited="#onMouseExited">
            <graphic>
                <StackPane stylesheets="@../images/cross-icon.fxml.css">
                    <children>
                        <fx:include source="../images/cross-icon.fxml" />
                    </children>
                </StackPane>
            </graphic>
            <tooltip>
                <Tooltip text="Supprimer" />
            </tooltip>
            <styleClass>
                <String fx:value="borderless-button" />
                <String fx:value="standard-size" />
            </styleClass>
        </Button>
    </children>
    <stylesheets>
        <URL value="@../css/main.fxml.css" />
    </stylesheets>
    <styleClass>
        <String fx:value="root-node" />
    </styleClass>
</fx:root>