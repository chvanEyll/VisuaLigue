<VBox fx:id="rootNode" spacing="14.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ca.ulaval.glo2004.visualigue.ui.controllers.sportcreation.SportCreationStep2Controller">
    <VBox spacing="14.0" styleClass="form-section">
        <children>
            <HBox alignment="CENTER_LEFT" prefHeight="38.0" styleClass="section-header">
                <children>
                    <Label text="Dimensions réelles du terrain" />
                </children>
                <padding>
                    <Insets left="10.0" />
                </padding>
            </HBox>
            <FlowPane hgap="14.0" styleClass="form-group horizontal" vgap="14.0">
                <children>
                    <Label prefWidth="70.0" text="Largeur:" />
                    <Spinner fx:id="widthSpinner" editable="true" styleClass="arrows-on-right-horizontal" />
                    <ComboBox fx:id="widthUnitComboBox" prefWidth="150" maxWidth="150" />
                </children>
            </FlowPane>
            <FlowPane hgap="14.0" styleClass="form-group horizontal" vgap="14.0">
                <children>
                    <Label prefWidth="70.0" text="Longeur:" />
                    <Spinner fx:id="lengthSpinner" editable="true" styleClass="arrows-on-right-horizontal" />
                    <ComboBox fx:id="lengthUnitComboBox" prefWidth="150" maxWidth="150" />
                </children>
            </FlowPane>
        </children>
    </VBox>
    <VBox spacing="14.0" styleClass="form-section">
        <children>
            <HBox alignment="CENTER_LEFT" prefHeight="38.0" styleClass="section-header">
                <children>
                    <Label text="Image du terrain" />
                </children>
                <padding>
                    <Insets left="10.0" />
                </padding>
            </HBox>
            <FlowPane hgap="14.0" styleClass="form-group horizontal" vgap="14.0">
                <children>
                    <Button mnemonicParsing="false" text="Sélectionner une image..." onAction="#onBrowseImageButtonAction" />
                    <Label fx:id="imagePathLabel" text="..\images\built-in-playing-surfaces\hockey.png" />
                </children>
            </FlowPane>
            <Label fx:id="imageErrorLabel" styleClass="error-label" text="Error." />
            <ResizableImageView fx:id="imageView" style="-fx-border-color: #CCCCCC;" >
                <image>
                    <Image url="@/images/built-in-playing-surfaces/hockey.png" />
                </image>
            </ResizableImageView>
        </children>
    </VBox>
    <styleClass>
        <String fx:value="root-node" />
    </styleClass>
</VBox>