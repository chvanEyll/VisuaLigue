<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToWidth="true" hbarPolicy="NEVER" pannable="true" HBox.hgrow="ALWAYS" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1">
    <content>
       <VBox prefWidth="100.0" spacing="10.0">
          <padding>
             <Insets bottom="14.0" left="14.0" right="14.0" top="14.0" />
          </padding>
          <children>
             <Pane>
                <children>
                   <HBox alignment="CENTER_LEFT" fillHeight="false" spacing="7.0" style="-fx-background-color: #;" styleClass="link-button">
                      <children>
                          <Pane stylesheets="@../css/graphics/plus-icon-blue.fxml.css">
                            <children>
                               <fx:include source="graphics/plus-icon-blue.fxml" />
                            </children>
                         </Pane>
                         <Label text="Nouveau sport" />
                      </children>
                   </HBox>
                </children>
             </Pane>
             <TilePane hgap="14.0" prefTileHeight="150.0" prefTileWidth="150.0" styleClass="tile-container" tileAlignment="TOP_LEFT" vgap="14.0">
                <children>
                   <VBox alignment="TOP_CENTER" fillWidth="false" styleClass="sport-list-item">
                      <children>
                         <Pane stylesheets="@../css/graphics/sport-hockey-icon.fxml.css">
                            <children>
                               <fx:include source="graphics/sport-hockey-icon.fxml" />
                            </children>
                         </Pane>
                         <AnchorPane VBox.vgrow="ALWAYS">
                            <children>
                               <Label alignment="CENTER" contentDisplay="CENTER" styleClass="item-text" text="Hockey" wrapText="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                            </children>
                         </AnchorPane>
                      </children>
                      <TilePane.margin>
                         <Insets />
                      </TilePane.margin>
                      <padding>
                         <Insets bottom="14.0" left="14.0" right="14.0" top="14.0" />
                      </padding>
                   </VBox>
                   <VBox alignment="TOP_CENTER" fillWidth="false" layoutX="25.0" layoutY="30.0" styleClass="sport-list-item">
                      <children>
                         <Pane stylesheets="@../css/graphics/sport-soccer-icon.fxml.css">
                            <children>
                               <fx:include source="graphics/sport-soccer-icon.fxml" />
                            </children>
                         </Pane>
                         <AnchorPane VBox.vgrow="ALWAYS">
                            <children>
                               <Label alignment="CENTER" contentDisplay="CENTER" styleClass="item-text" text="Soccer" wrapText="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                  <font>
                                     <Font name="Source Sans Pro Light" size="19.0" />
                                  </font>
                               </Label>
                            </children>
                         </AnchorPane>
                      </children>
                      <padding>
                         <Insets bottom="14.0" left="10.0" right="14.0" top="14.0" />
                      </padding>
                   </VBox>
                   <VBox alignment="TOP_CENTER" fillWidth="false" layoutX="189.0" layoutY="30.0">
                      <children>
                         <Pane stylesheets="@../css/graphics/plus-icon-orange.fxml.css">
                            <children>
                               <fx:include source="graphics/plus-icon-orange.fxml" />
                            </children>
                            <VBox.margin>
                               <Insets bottom="27.0" top="27.0" />
                            </VBox.margin>
                         </Pane>
                         <AnchorPane VBox.vgrow="ALWAYS">
                            <children>
                               <Label alignment="CENTER" contentDisplay="CENTER" styleClass="item-text" text="Nouveau sport" wrapText="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                            </children>
                         </AnchorPane>
                      </children>
                      <padding>
                         <Insets bottom="14.0" left="10.0" right="14.0" top="14.0" />
                      </padding>
                     <styleClass>
                        <String fx:value="sport-list-item" />
                        <String fx:value="sport-list-item-add" />
                     </styleClass>
                   </VBox>
                </children>
                <padding>
                   <Insets bottom="14.0" left="14.0" right="14.0" top="14.0" />
                </padding>
                <opaqueInsets>
                   <Insets />
                </opaqueInsets>
             </TilePane>
          </children>
       </VBox>
    </content>
   <styleClass>
      <String fx:value="edge-to-edge" />
      <String fx:value="root-section-pane" />
   </styleClass>
   <stylesheets>
      <URL value="@../css/sports-list.fxml.css" />
      <URL value="@../css/main.fxml.css" />
   </stylesheets>
 </ScrollPane>
